<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationColored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_item_color</item>
        <item name="itemTextColor">@color/bottom_item_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemTextAppearanceInactive">@color/bottom_item_color</item>
        <item name="itemTextAppearanceActive">@color/bottom_item_color</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="screens_background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="title_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ScreenTitle">
