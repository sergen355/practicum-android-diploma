    <style name="fragment_filters_expected_salary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="placeholderTextColor">@color/white</item>

    </style>

    <style name="gray_16_regular">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="black_16_regular">
        <item name="android:textColor">@color/white</item>
